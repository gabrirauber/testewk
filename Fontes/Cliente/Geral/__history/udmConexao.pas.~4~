unit udmConexao;

interface

uses
  System.SysUtils, System.Classes, uMethods, Datasnap.DSClientRest;

type
  TdmConexao = class(TDataModule)
    rConexao: TDSRestConnection;
  private
    FInstanceOwner: Boolean;
    { Private declarations }
  public
    constructor Create(AOwner: TComponent); override;
    destructor Destroy; override;
    property InstanceOwner: Boolean read FInstanceOwner write FInstanceOwner;

end;

var
  dmConexao: TdmConexao;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

constructor TdmConexao.Create(AOwner: TComponent);
begin
  inherited;
  FInstanceOwner := True;
end;

destructor TdmConexao.Destroy;
begin

  inherited;
end;

function TdmConexao.GetdmBaseCadastroClient: TdmBaseCadastroClient;
begin
  if FdmBaseCadastroClient = nil then
    FdmBaseCadastroClient:= TdmBaseCadastroClient.Create(DSRestConnection1, FInstanceOwner);
  Result := FdmBaseCadastroClient;
end;
function TdmConexao.GetdmCadPessoaClient: TdmCadPessoaClient;
begin
  if FdmCadPessoaClient = nil then
    FdmCadPessoaClient:= TdmCadPessoaClient.Create(DSRestConnection1, FInstanceOwner);
  Result := FdmCadPessoaClient;
end;

end.
