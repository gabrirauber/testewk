unit udmConexao;

interface

uses
  System.SysUtils, System.Classes, uMethods, Datasnap.DSClientRest, uArquivoIni;

type
  TdmConexao = class(TDataModule)
    rConexao: TDSRestConnection;
  private
    FInstanceOwner: Boolean;
    { Private declarations }
    procedure ConfigurarConexao;
  public

    constructor Create(AOwner: TComponent); override;
    property InstanceOwner: Boolean read FInstanceOwner write FInstanceOwner;

end;

var
  dmConexao: TdmConexao;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

procedure TdmConexao.ConfigurarConexao;
var
  Retorno: String;
begin
  Retorno := TArquivoIni.LerArquivoIni('CONEXAO','IP');
  if Retorno = '' then
  begin
    TArquivoIni.GravarArquivoIni('CONEXAO','IP','127.0.0.1');
    Retorno := '127.0.0.1';
  end;
  rConexao.Host := dmConfiguracoes.LerConfiguracaoLocal('IP','', tscConexao);
  ARet := dmConfiguracoes.LerConfiguracaoLocal('PORTA','', tscConexao);
  rConexao.Port := StrToInt(ARet);

end;

constructor TdmConexao.Create(AOwner: TComponent);
begin
  inherited;
  FInstanceOwner := True;

end;


end.
