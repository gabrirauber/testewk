unit ufrmEndereco;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ufrmBase, Vcl.ExtCtrls, Vcl.StdCtrls, uClasses, uWsViaCEP;

type
  TfrmEndereco = class(TfrmBase)
    pnlEndereco: TPanel;
    Panel2: TPanel;
    btnSalvar: TButton;
    btnCancelar: TButton;
    edtCEP: TEdit;
    Label1: TLabel;
    Button1: TButton;
    Label2: TLabel;
    edtLogradouro: TEdit;
    edtBairro: TEdit;
    Label3: TLabel;
    edtComplemento: TEdit;
    Label4: TLabel;
    edtCidade: TEdit;
    Label5: TLabel;
    Label6: TLabel;
    edtUF: TEdit;
    procedure FormShow(Sender: TObject);
    procedure btnCancelarClick(Sender: TObject);
    procedure btnSalvarClick(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    FDadosEndereco: TInserirEndereco;
    procedure PreencherEndereco;
    { Private declarations }
  public
    { Public declarations }
    property DadosEndereco: TInserirEndereco read FDadosEndereco write FDadosEndereco;
  end;

var
  frmEndereco: TfrmEndereco;

implementation

{$R *.dfm}

procedure TfrmEndereco.btnCancelarClick(Sender: TObject);
begin
  inherited;
  ModalResult := mrCancel;
end;

procedure TfrmEndereco.btnSalvarClick(Sender: TObject);
begin
  inherited;
  if not Assigned(DadosEndereco) then
    DadosEndereco := TInserirEndereco.Create;
  DadosEndereco.CEP := edtCEP.Text;
  DadosEndereco.UF := edtUF.Text;
  DadosEndereco.Cidade := edtCidade.Text;
  DadosEndereco.Bairro := edtBairro.Text;
  DadosEndereco.Logradouro := edtLogradouro.Text;
  DadosEndereco.complemento := edtComplemento.Text;
  ModalResult := mrOk;
end;

procedure TfrmEndereco.Button1Click(Sender: TObject);
var
  Consulta: TConsultaCEP;
  DadosEndereco: TInserirEndereco;
begin
  inherited;
  Consulta := TConsultaCEP.Create;
  try
    Con

  finally
    Consulta.Free;
  end;

end;

procedure TfrmEndereco.FormShow(Sender: TObject);
begin
  inherited;
  if Assigned(DadosEndereco) then
    PreencherEndereco;
end;

procedure TfrmEndereco.PreencherEndereco;
begin
  edtCEP.Text := DadosEndereco.CEP;
  edtLogradouro.Text := DadosEndereco.Logradouro;
  edtBairro.Text := DadosEndereco.Bairro;
  edtCidade.Text := DadosEndereco.Cidade;
  edtUF.Text := DadosEndereco.UF;
  edtComplemento.Text := DadosEndereco.complemento;
end;

end.
