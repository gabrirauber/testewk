  protected
    procedure MontarItem(Dados: String; Index: Integer);override;
    procedure CorrigirTamanhoColunas;override;
    procedure Selecionar;override;
  public
    { Public declarations }
  end;

var
  frmConsultaPedido: TfrmConsultaPedido;

implementation

