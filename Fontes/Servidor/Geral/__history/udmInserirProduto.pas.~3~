unit udmInserirProduto;

interface

uses
  System.SysUtils, System.Classes, udmBase, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt,
  Data.DB, FireDAC.Comp.DataSet, FireDAC.Comp.Client;

type
  TdmInserirProduto = class(TDMBase)
    qryConsulta: TFDQuery;
  private
    { Private declarations }
  public
    { Public declarations }
    function RetornaNomeProduto(ID: Integer): String;
  end;

var
  dmInserirProduto: TdmInserirProduto;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

{ TdmInserirProduto }

function TdmInserirProduto.RetornaNomeProduto(ID: Integer): String;
begin
  qryConsulta.SQL.Text := 'SELECT DESCRICAO ' +
                         'FROM PRODUTO ' +
                         'WHERE ID = :ID';
  qryConsulta.ParamByName('ID').AsInteger := ID;
  qryConsulta.Open()
  Result := qryConsulta.FieldByName('descricao').AsString;

end;

end.
